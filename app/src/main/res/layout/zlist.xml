<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_z_numbering"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        android:backgroundTint="#FEFCDA"
        android:fontFamily="@font/nanumsquare_aceb"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_z_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        android:backgroundTint="#FEFCDA"
        android:fontFamily="@font/nanumsquare_aceb"
        android:gravity="center"
        android:text="증발지"
        app:layout_constraintStart_toEndOf="@+id/tv_z_numbering"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_z_indoor_temp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        android:backgroundTint="#FEFCDA"
        android:fontFamily="@font/nanumsquare_aceb"
        android:gravity="center"
        android:text="28.5"
        app:layout_constraintStart_toEndOf="@+id/tv_z_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_z_indoor_temp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_move_con"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FECA72"
        android:fontFamily="@font/nanumsquare_aceb"
        android:text="제어"
        app:layout_constraintStart_toEndOf="@+id/tv_z_indoor_temp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_move_sen"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="#FECA72"
        android:fontFamily="@font/nanumsquare_aceb"
        android:text="센서"
        app:layout_constraintEnd_toEndOf="@+id/btn_move_con"
        app:layout_constraintStart_toStartOf="@+id/btn_move_con"
        app:layout_constraintTop_toBottomOf="@+id/btn_move_con" />
</androidx.constraintlayout.widget.ConstraintLayout>